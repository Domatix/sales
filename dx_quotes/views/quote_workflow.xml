<openerp>
  <data>
    <record model="workflow" id="wkf_quote">
      <field name="name">Quote Workflow</field>
      <field name="osv">sale.quote</field>
      <field name="on_create">True</field>
    </record>

    <record model="workflow.activity" id="draft">
      <field name="name">Draft</field>
      <field name="wkf_id" ref="wkf_quote"/>
      <field name="flow_start" eval="True"/>
      <field name="kind">function</field>
      <field name="action">action_to_draft()</field>
    </record>
    <record model="workflow.activity" id="approved">
      <field name="name">Approved</field>
      <field name="wkf_id" ref="wkf_quote"/>
      <field name="kind">function</field>
      <field name="action">action_approved()</field>
    </record>
    <record model="workflow.activity" id="sent">
      <field name="name">Sent</field>
      <field name="wkf_id" ref="wkf_quote"/>
      <field name="kind">function</field>
      <field name="action">action_sent()</field>
    </record>
    <record model="workflow.activity" id="transfered">
      <field name="name">Transfer</field>
      <field name="wkf_id" ref="wkf_quote"/>
      <field name="kind">function</field>
      <field name="action">action_transfered()</field>
    </record>
    <!-- <record model="workflow.activity" id="finished">
      <field name="name">Finished</field>
      <field name="wkf_id" ref="wkf_quote"/>
      <field name="kind">function</field>
      <field name="action">action_finished()</field>
    </record> -->

    <record model="workflow.transition" id="quote_draft_to_approved">
      <field name="act_from" ref="draft"/>
      <field name="act_to" ref="approved"/>
      <field name="signal">approve</field>
    </record>
    <record model="workflow.transition" id="course_approved_to_sent">
      <field name="act_from" ref="approved"/>
      <field name="act_to" ref="sent"/>
      <field name="signal">send</field>
    </record>
    <record model="workflow.transition" id="course_sent_to_transfered">
      <field name="act_from" ref="sent"/>
      <field name="act_to" ref="transfered"/>
      <field name="signal">transfer</field>
    </record>
    <record model="workflow.transition" id="course_approved_to_transfered">
      <field name="act_from" ref="approved"/>
      <field name="act_to" ref="transfered"/>
      <field name="signal">transfer</field>
    </record>
    <record model="workflow.transition" id="course_approved_to_draft">
      <field name="act_from" ref="approved"/>
      <field name="act_to" ref="draft"/>
      <field name="signal">draft</field>
    </record>
    <record model="workflow.transition" id="course_sent_to_draft">
      <field name="act_from" ref="sent"/>
      <field name="act_to" ref="draft"/>
      <field name="signal">draft</field>
    </record>

