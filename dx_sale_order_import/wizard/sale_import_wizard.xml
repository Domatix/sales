<?xml version="1.0" encoding="utf-8"?>

<odoo>

<record id="sale_order_import_form" model="ir.ui.view">
    <field name="name">sale.import.wizard.form</field>
    <field name="model">sale.import.wizard</field>
    <field name="arch"  type="xml">
        <form string="Import Sale Orders">
            <group name="import">
                <field name="order_file" filename="order_filename"/>
                <field name="order_filename" invisible="1"/>
            </group>
            <footer>
                <button name="import_button" type="object"
                    class="oe_highlight" string="Import"/>
                <button special="cancel" string="Cancel" class="oe_link"/>
            </footer>
        </form>
    </field>
</record>

<record id="dx_sale_order_import_action" model="ir.actions.act_window">
    <field name="name">Import Sale orders</field>
    <field name="res_model">sale.import.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

