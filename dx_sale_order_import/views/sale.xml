<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="sale_order_form_import">
      <field name="name">sale.order.form.import</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <field name="partner_id" position="after">
          <field name="channel" />
          <field name="sale_number" />
          <field name="sale_number_platform" />
         </field>
         <field name="date_order" position="attributes">
           <attribute name="attrs">{}</attribute>
         </field>
         <field name="user_id" position="attributes">
           <attribute name="attrs">{'invisible':1}</attribute>
         </field>
         <field name="team_id" position="attributes">
           <attribute name="attrs">{'invisible':1}</attribute>
         </field>
       </field>
    </record>

    <record id="view_sale_order_amazon_inherit_tree" model="ir.ui.view">
        <field name="name">view.sale_order_amazon_inherit.tree</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='sale.view_order_tree'/>
        <field name="arch" type="xml">
            <field name="name" position="after">
              <field name="channel" />
              <field name="sale_number_platform" />


            </field>
        </field>
    </record>

    <record id="view_sale_order_quotation_amazon_inherit_tree" model="ir.ui.view">
        <field name="name">view.sale_order_quotation_amazon_inherit.tree</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='sale.view_quotation_tree'/>
        <field name="arch" type="xml">
            <field name="name" position="after">
              <field name="channel" />
              <field name="sale_number_platform" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_form_import_search">
      <field name="name">sale.order.import.search</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <filter name="draft" position="before">
          <filter name="imported" string="Imported" domain="[('imported','=',1)]" />


        </filter>
        <field name="name" position="after">
          <field name="channel" />

        </field>
       </field>
    </record>

    <record model="ir.ui.view" id="sale_order_form_import_confirmed_search">
      <field name="name">sale.order.import.confirmed.search</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <filter name="sales" position="before">
          <filter name="imported" string="Imported" domain="[('imported','=',1)]" />


        </filter>
        <field name="name" position="after">
          <field name="channel" />

        </field>
       </field>
    </record>

  </data>
</odoo>
