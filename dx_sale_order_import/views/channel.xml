<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_channel_type_form" model="ir.ui.view">
      <field name="name">view.channel_type.form</field>
      <field name="model">channel.type</field>
      <field name="arch" type="xml">
        <form string="Channels">
          <sheet>
            <group name="main">
              <field name="name" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_channel_type_tree" model="ir.ui.view">
      <field name="name">view.channel_type.tree</field>
      <field name="model">channel.type</field>
      <field name="arch" type="xml">
        <tree string="Canales">
          <field name="name" />
        </tree>
      </field>
    </record>

    <record id="view_channel_type_search" model="ir.ui.view">
      <field name="name">view.channel_type.search</field>
      <field name="model">channel.type</field>
      <field name="arch" type="xml">
        <search string="Canales">
          <field name="name" />
          <group string="Group By" name="groupby">
            <filter name="name_groupby" string="Name"
              context="{'group_by': 'name'}" />
          </group>
        </search>
      </field>
    </record>

    <record id="channel_type_action" model="ir.actions.act_window">
      <field name="name">Canales</field>
      <field name="res_model">channel.type</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create channels.
        </p>
      </field>
    </record>

    <menuitem id="channel_type_menu" parent="sales_team.menu_sale_config"
      action="channel_type_action" sequence="1"/>

  </data>
</odoo>
