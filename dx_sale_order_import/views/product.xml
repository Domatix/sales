<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="product_product_ref_view">
      <field name="name">product.ref.form</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <field name="default_code" position="after">
          <field name="ref_uniq" />

         </field>
        <xpath expr="//page[@name='notes']" position="after">
         <page name="sku" string="Sku">

                 <field name="sku_ids">
                   <tree editable="bottom" string="Sku">
                     <field name="name"/>
                     <field name="channel_platform" />

                   </tree>
                 </field>

         </page>
       </xpath>
       </field>
    </record>

    <record model="ir.ui.view" id="product_product_search_view_sku">
      <field name="name">product.product.search.view.sku</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_search_form_view"/>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <field name="attribute_value_ids" position="before">
          <field name="sku_ids" />

         </field>

       </field>
    </record>

    <record model="ir.ui.view" id="product_template_sku_code">
      <field name="name">product.template.sku.code</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <field name="categ_id" position="after">
          <field name="skus" />

         </field>

       </field>
    </record>

    <record model="ir.ui.view" id="product_template_search_sku_code">
      <field name="name">product.template.search.sku.code</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_search_view"/>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="skus" />

         </field>

       </field>
    </record>

  </data>
</odoo>
